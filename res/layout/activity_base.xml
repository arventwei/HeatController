<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_whole"
    android:orientation="vertical"
    android:padding="0.0dip" >

    <RelativeLayout
        android:id="@+id/setup_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
          <TextView
	      
	        android:layout_width="fill_parent"
	        android:layout_height="40.0dip"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/top_bar_bg"
	        android:gravity="center"
	        android:textColor="#FFFFFFFF"
	        android:textSize="20.0dip" >

		</TextView>

         <Button
             android:id="@+id/btn_base_back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:background="@drawable/btn_top_back"
             android:onClick="onClickBack"
             android:paddingBottom="5dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:paddingTop="5dp"
             android:text="@string/top_back"
             android:textSize="16.0dip" />
       
        <TextView
            android:id="@+id/txt_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />
        
         <Button
             android:id="@+id/btn_base_enter"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:background="@drawable/btn_top_ok"
             android:onClick="onClickOK"
             android:paddingBottom="5dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:paddingTop="5dp"
             android:text="@string/top_ok"
             android:textSize="16.0dip" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/activity_client"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>